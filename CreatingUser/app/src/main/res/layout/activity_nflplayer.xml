<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SpecificNFLTeam">

    <TextView
        android:id="@+id/nflPlayerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="NFL Player Stats"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonTeams"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Teams" />

    <ListView
        android:id="@+id/nflPlayerStats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/nflPlayerTitle" />
</RelativeLayout>