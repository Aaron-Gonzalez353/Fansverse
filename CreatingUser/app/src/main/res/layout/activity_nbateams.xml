<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context='.MainActivity'>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AB673AB7">

    <TextView
        android:id="@+id/nbaTeamsPageFansverse"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:text="All NBA Teams"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonSportsTeamMainPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/buttonSportsTeamMainPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to all Leagues"
        app:layout_constraintBottom_toTopOf="@+id/nbaTeamsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nbaTeamsPageFansverse" />

 <!--   <Button
        android:id="@+id/buttonShowTeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Teams"
        app:layout_constraintBottom_toTopOf="@+id/nbaTeamsText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSportsTeamMainPage" /> -->

    <TextView
        android:id="@+id/nbaTeamsText"
        android:layout_width="309dp"
        android:layout_height="800dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="48dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSportsTeamMainPage" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>