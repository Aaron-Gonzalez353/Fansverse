    <TextView
        android:id="@+id/sportsTeamsMainPageFansverse"
        android:layout_width="248dp"
        android:layout_height="42dp"
        android:layout_marginTop="40dp"
        android:text="Check out the Teams"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNBATeams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NBA Teams"
        app:layout_constraintTop_toBottomOf="@+id/sportsTeamsMainPageFansverse"
        app:layout_constraintBottom_toTopOf="@+id/buttonNFLTeams"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
