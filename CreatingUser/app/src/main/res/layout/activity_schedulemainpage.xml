    <TextView
        android:id="@+id/scheduleMainPageFansverse"
        android:layout_width="259dp"
        android:layout_height="76dp"
        android:layout_marginTop="40dp"
        android:text="Sports Schedules"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonNBASchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NBA"
        app:layout_constraintBottom_toTopOf="@+id/buttonNFLSchedule"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scheduleMainPageFansverse" />

    <Button
        android:id="@+id/buttonNFLSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NFL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonNBASchedule"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"/>
