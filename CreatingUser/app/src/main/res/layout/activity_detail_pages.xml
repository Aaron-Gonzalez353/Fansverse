<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activities.DetailPages">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout_title"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:textSize="24dp"
            android:id="@+id/detail_page_title"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="Title"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:id="@+id/detail_page_description"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="This is the description"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="16dp"
            android:id="@+id/detail_page_members"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="Members: 20"
            android:layout_marginBottom="50dp"
            android:layout_height="wrap_content">
        </TextView>

        <Button
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/fan_page_chat_room"
            android:text="Chat Room"
            android:visibility="invisible"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/fan_page_posts"
            android:text="Posts"
            android:visibility="invisible"
            android:layout_height="wrap_content">
        </Button>


        <Button
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:id="@+id/fan_page_join"
            android:text="Join"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>
</RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>